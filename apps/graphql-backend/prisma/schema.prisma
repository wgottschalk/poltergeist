generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  name       String
  githubName String
  email      String
  services   Service[]
}


model Service {
  @@index([userId])
  id String @id @default(cuid())
  user User? @relation(fields: [userId], references: [id])
  userId String?

  name String
  branchName String
  buildCommand String
  publishDirectory String
}
